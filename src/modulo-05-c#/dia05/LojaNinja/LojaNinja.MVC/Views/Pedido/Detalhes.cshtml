@model LojaNinja.Dominio.Pedido

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

@if (@ViewBag.MensagemSucesso != null)
{
    <h3 class="alert alert-success">@ViewBag.MensagemSucesso</h3>
}
<!-- Este carinha aqui que gera o token de segurança do form. -->
@Html.AntiForgeryToken()
<div>
    <h1>Detalhes</h1>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            Data Pedido:
        </dt>

        <dd>
            @Model.DataPedido.ToShortDateString()
        </dd>

        <dt>
            Data Desejada:
        </dt>

        <dd @Html.Raw(Model.PedidoUrgente ? "class='urgente'" : "")>
            @Model.DataEntregaDesejada.ToShortDateString()
            @Html.Raw(Model.PedidoUrgente ? "<span class='glyphicon glyphicon-alert' aria-hidden='true'></span>" : "")
        </dd>

        <dt>
            Produto:
        </dt>

        <dd>
            @Model.NomeProduto
        </dd>

        <dt>
            Valor:
        </dt>

        <dd>
            @Model.Valor
        </dd>

        <dt>
            Cliente
        </dt>

        <dd>
            @Model.NomeCliente
        </dd>

        <dt>
            Cidade
        </dt>

        <dd>
            @Model.Cidade
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Model.Estado
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Listagem", "Pedido")">
        <button type="submit" class="btn btn-default"> Listagem </button>
    </a>
</p>
