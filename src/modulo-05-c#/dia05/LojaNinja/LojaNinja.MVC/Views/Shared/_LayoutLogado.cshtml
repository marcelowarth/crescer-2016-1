<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<header id="nav-top">
    <div id="logo">
        <img src="~/Content/Imagens/logoCameloNinja.png" alt="logo" width="300px" />
    </div>
    <div class="navbar-right">
        <div class="row">
            <div class="btn-group" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Navegação
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li class="dropdown-header">Pedidos</li>
                        <li><a href="~/Pedido/Listagem">Listagem</a></li>
                        <li><a href="~/Pedido/Manter">Cadastrar</a></li>
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">Usuários</li>
                        <li><a href="~/Login/ListagemUsuarios">Listagem de Usuários</a></li>
                        <li><a href="~/Login/CadastroUsuarios">Cadastro de Usuários</a></li>
                    </ul>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        @Session["BemVindo"]
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="~/Login/Sair">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
<body>
    <div id="main">
        <div id="box">
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>

